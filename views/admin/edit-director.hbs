<div class="main-wrapper">
    <div class="page-container">
        <h1 class="page-title">Редактировать профиль режиссера: {{director.name}}</h1>

        {{#if error}}
            <div class="alert alert-error">
                <p>{{error}}</p>
            </div>
        {{/if}}

        {{#if success}}
            <div class="alert alert-success">
                <p>{{success}}</p>
            </div>
        {{/if}}

        {{!-- Основная форма редактирования --}}
        <form action="/admin/edit-director/{{director.directorid}}" method="POST" class="edit-form" enctype="multipart/form-data">

            {{!-- Скрытое поле ID для идентификации режиссера --}}
            <input type="hidden" name="directorid" value="{{director.directorid}}">

            <input type="hidden" name="currentPhotourl" value="{{director.photourl}}">


            {{!-- Имя режиссера (НЕРЕДАКТИРУЕМО) --}}
            <div class="form-group">
                <label for="name">Имя режиссера</label>
                <input type="text" id="name" name="name" value="{{director.name}}" required readonly aria-readonly="true">
            </div>

            {{!-- Дата рождения --}}
            <div class="form-group">
                <label for="birthdate">Дата рождения</label>
                <input type="date" id="birthdate" name="birthdate" value="{{director.birthdate}}">
            </div>

            <div class="form-group">
                <label for="directorPhoto">Загрузить фото режиссера (directorPhoto)</label>
                <input type="file" id="directorPhoto" name="directorPhoto" accept="image/*">
                {{#if director.photourl}}
                    <small style="display: block; margin-top: 5px; opacity: 0.7;">Текущее фото: <a href="{{director.photourl}}" target="_blank">просмотреть</a>. Загрузка нового файла заменит его.</small>
                {{/if}}
            </div>

            {{!-- Биография (TEXT) --}}
            <div class="form-group">
                <label for="biography">Биография (biography)</label>
                <textarea id="biography" name="biography" rows="10">{{director.biography}}</textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">Сохранить изменения</button>
            </div>
        </form>

        <hr class="section-divider">

        {{!-- Форма удаления --}}
        <form action="/admin/delete-director/{{director.directorid}}" method="POST" class="delete-form" onsubmit="return confirm('Вы уверены, что хотите удалить профиль режиссера {{director.name}}? Это действие необратимо!');">
            <button type="submit" class="btn btn-delete">Обнулить профиль</button>
        </form>
    </div>
</div>
{{!-- Стили для формы редактирования --}}
<style>
    /* Reuse base styles for dark theme */
    .main-wrapper {
        background-color: #1a1a1a;
        color: #f0f0f0;
        min-height: 100vh;
        padding-bottom: 50px;
    }

    .page-container {
        max-width: 800px; /* Wider container for the form */
        margin: 0 auto;
        padding: 0 20px;
    }

    .page-title {
        font-size: 36px;
        color: #e50914;
        padding-top: 40px;
        margin-bottom: 30px;
        border-bottom: 2px solid #333;
        padding-bottom: 10px;
    }

    .edit-form {
        background-color: #2c2c2c;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #f0f0f0;
        font-size: 16px;
    }

    .form-group input[type="text"],
    .form-group input[type="date"],
    .form-group input[type="url"],
    .form-group textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #444;
        border-radius: 5px;
        background-color: #333;
        color: #f0f0f0;
        font-size: 16px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    /* Стиль для поля только для чтения */
    .form-group input[type="text"][readonly] {
        background-color: #444; /* Более светлый или другой цвет для визуального выделения */
        cursor: default;
        opacity: 0.8;
    }

    .form-group input[type="text"][readonly]:focus {
        box-shadow: none; /* Удалить эффект фокуса */
        border-color: #444; /* Сохранить границу без фокуса */
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: #e50914;
        outline: none;
        box-shadow: 0 0 0 2px rgba(229, 9, 20, 0.5);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 200px;
    }

    /* Buttons */
    .form-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 25px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-save {
        background-color: #e50914;
        color: white;
    }

    .btn-save:hover {
        background-color: #f40a1b;
    }

    .btn-delete {
        background-color: #555;
        color: white;
        margin-top: 20px;
        width: 100%;
    }

    .btn-delete:hover {
        background-color: #e50914;
    }

    .section-divider {
        border: 0;
        height: 1px;
        background-color: #333;
        margin: 40px 0;
    }

    /* Адаптивность */
    @media (max-width: 600px) {
        .page-container {
            padding: 0 15px;
        }

        .page-title {
            font-size: 30px;
            padding-top: 20px;
        }

        .edit-form {
            padding: 20px;
        }

        .btn {
            width: 100%;
        }

        .form-actions {
            justify-content: center;
        }
    }
</style>
