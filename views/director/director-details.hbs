<div class="main-wrapper">
    <div class="page-container">

        {{!-- Блок с основной информацией о режиссере --}}
        <section class="director-details-hero">
            <div class="director-photo-container">
                <img src="{{director.photourl}}" alt="{{director.name}}" class="director-photo" onerror="this.onerror=null;this.src='https://placehold.co/300x450/1a1a1a/f0f0f0?text=Нет+Фото';"/>
            </div>
            <div class="director-info-content">
                <h1 class="director-name">{{director.name}}</h1>

                {{#if director.birthdate}}
                    <p class="director-meta">
                        <i class="fas fa-birthday-cake"></i>
                        Дата рождения: <strong>{{director.birthdate}}</strong>
                    </p>
                {{/if}}

                <div class="director-biography">
                    <h2 class="biography-title">Биография</h2>
                    <p>{{director.biography}}</p>
                </div>

                {{#if isAdmin}}
                    <a href="/admin/edit-director/{{director.directorid}}" class="btn btn-primary edit-btn">Редактировать профиль</a>
                {{/if}}
            </div>
        </section>

        <hr class="section-divider">

        {{!-- Секция фильмографии - УПРОЩЕННЫЙ ВАРИАНТ --}}
        <section class="main-content">
            <h2 class="main-content-title">Фильмография ({{movies.length}})</h2>

            {{#if movies.length}}
                <div class="movies-grid">
                    {{#each movies}}
                        <div class="movie-card">
                            <a href="/movies/{{movieid}}">
                                <img src="{{posterurl}}" alt="{{title}}" onerror="this.onerror=null;this.src='https://placehold.co/300x400/2c2c2c/f0f0f0?text=Нет+Постера';"/>
                            </a>

                            <!-- НОВЫЙ ЭЛЕМЕНТ: Динамический рейтинг, как на главной странице -->
                            <span class="rating-badge">{{rating}} ⭐</span>

                            <div class="card-info">
                                <div>
                                    <h3>{{title}}</h3>
                                    <!-- НОВЫЙ ЭЛЕМЕНТ: Жанр и продолжительность -->
                                    <p class="genre">{{genre}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p class="no-movies-message">В данный момент фильмов этого режиссера в базе нет.</p>
            {{/if}}
        </section>

    </div>


</div>

