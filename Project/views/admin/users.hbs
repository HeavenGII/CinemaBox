<!-- Предполагается использование Bootstrap 5 -->

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 text-primary">{{title}}</h1>

            <!-- ФОРМА ПОИСКА ПОЛЬЗОВАТЕЛЕЙ -->
            <form action="/admin/users" method="GET" class="mb-4">
                <div class="input-group shadow-sm">
                    <input type="text"
                           class="form-control"
                           placeholder="Поиск пользователей по Email..."
                           name="searchEmail"
                           value="{{searchEmail}}"
                           aria-label="Поиск по Email">

                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-search"></i> Найти
                    </button>
                    {{#if searchEmail}}
                        <a href="/admin/users" class="btn btn-outline-secondary" title="Сбросить поиск">
                            <i class="bi bi-x-lg"></i> Сброс
                        </a>
                    {{/if}}
                </div>
            </form>
            <!-- КОНЕЦ ФОРМЫ ПОИСКА -->

            <!-- Сообщения об ошибке/успехе -->
            {{!-- Сообщения об ошибках и успехах теперь передаются как одиночные строки из admin.js --}}
            {{#if error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Ошибка:</strong> {{error}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            {{/if}}

            {{#if success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Успех:</strong> {{success}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            {{/if}}

            {{#if users.length}}
                {{#if searchEmail}}
                    <div class="alert alert-info shadow-sm" role="alert">
                        Результаты поиска по запросу: <strong>{{searchEmail}}</strong>
                    </div>
                {{/if}}

                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <span>Список зарегистрированных пользователей (Роль: Пользователь)</span>
                        <span class="badge bg-primary rounded-pill">{{users.length}}</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0 align-middle">
                                <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-center">ID</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Имя</th>
                                    <th scope="col">Фамилия</th>
                                    <th scope="col">Телефон</th>
                                    <th scope="col">Роль</th>
                                    <th scope="col" class="text-center">Действия</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each users}}
                                    <tr>
                                        <td class="text-center text-muted">{{userid}}</td>
                                        <td><strong>{{email}}</strong></td>
                                        <td>{{firstname}}</td>
                                        <td>{{lastname}}</td>
                                        <td>{{phone}}</td>
                                        <td>
                                            <span class="badge bg-secondary">{{role}}</span>
                                        </td>
                                        <td class="text-center">

                                            {{!-- Используется блочный хелпер ifeq для сравнения ID --}}
                                            {{#ifeq userid @root.user.userid}}
                                            {{!-- Блокируем кнопку, если ID пользователя совпадает с текущим администратором --}}
                                                <button type="button" class="btn btn-sm btn-outline-secondary" disabled
                                                        title="Вы не можете удалить свой собственный аккаунт">
                                                    <i class="bi bi-x-circle"></i> Сам себя
                                                </button>
                                            {{else}}
                                                <!-- Форма удаления -->
                                                <form action="/admin/users/delete" method="POST"
                                                      onsubmit="return confirm('ВНИМАНИЕ! Вы действительно хотите удалить пользователя {{email}} (ID: {{userid}})?');"
                                                      class="d-inline">

                                                    <input type="hidden" name="userId" value="{{userid}}">

                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            title="Удалить пользователя">
                                                        <i class="bi bi-trash"></i> Удалить
                                                    </button>
                                                </form>
                                            {{/ifeq}}
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {{else}}
                {{#if searchEmail}}
                    <div class="alert alert-warning shadow-sm" role="alert">
                        Поиск по запросу <strong>{{searchEmail}}</strong> не дал результатов.
                    </div>
                {{else}}
                    <div class="alert alert-info shadow-sm" role="alert">
                        На данный момент в системе нет зарегистрированных обычных пользователей.
                    </div>
                {{/if}}
            {{/if}}

        </div>
    </div>


</div>
<!-- Подключение иконок Bootstrap (если они не подключены глобально) -->
<link rel="stylesheet" href="https://www.google.com/search?q=https://cdn.jsdelivr.net/npm/bootstrap-icons%401.11.3/font/bootstrap-icons.min.css">