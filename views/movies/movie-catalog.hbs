<div class="page-container">
    <h1 class="page-title">{{title}}</h1>

    <div class="movie-grid">
        {{#each movies}}
            <div class="movie-card {{#unless this.isactive}}movie-card-inactive{{/unless}}">
                <a href="/movies/{{this.movieid}}" class="card-link-content">
                    <div class="poster-container">
                        <img src="{{this.posterurl}}" alt="{{this.title}}" class="movie-poster">
                        {{#if this.agerestriction}}
                            <div class="age-restriction-badge-small age-{{this.agerestriction}}">
                                {{this.agerestriction}}+
                            </div>
                        {{/if}}
                    </div>
                    <div class="movie-info">
                        <h3 class="movie-title">{{this.title}}</h3>

                        {{#unless this.isactive}}
                            <span class="status-badge badge-inactive">Скоро</span>
                        {{else}}
                            <span class="status-badge badge-active">В прокате</span>
                        {{/unless}}

                        <p class="movie-meta">
                            <span>{{this.genre}}</span> |
                            <span>{{this.durationmin}} мин.</span>
                        </p>
                        <div class="movie-rating">
                            Рейтинг:
                            {{#if this.ratingavg}}
                                <span style="color: #f5c518;">{{this.ratingavg}}</span>
                            {{else}}
                                Нет
                            {{/if}}
                        </div>
                    </div>
                </a>
                <div class="card-button-wrapper">
                    {{#if this.isactive}}
                        {{#if this.hassessions}}
                            <a href="/movies/{{this.movieid}}/select-time" class="btn btn-secondary">Купить билет ({{this.price}} BYN)</a>
                        {{else}}
                            <button class="btn btn-secondary" disabled>
                                Нет сеансов
                            </button>
                        {{/if}}
                    {{else}}
                        <button class="btn btn-secondary" disabled>
                            Скоро в прокате
                        </button>
                    {{/if}}
                </div>
            </div>
        {{else}}
            <div class="empty-list">
                <p>Каталог фильмов пуст.</p>
            </div>
        {{/each}}
    </div>
</div>

<style>
    .page-container {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
        min-height: calc(100vh - 200px);
    }

    .page-title {
        text-align: center;
        margin-bottom: 40px;
        color: var(--accent-primary);
        font-size: 36px;
        font-weight: bold;
        padding-top: 20px;
    }

    .search-results-info {
        text-align: center;
        margin-bottom: 30px;
        padding: 15px;
        background-color: var(--bg-card);
        border-radius: 10px;
        border-left: 4px solid var(--accent-primary);
    }

    .search-results-info p {
        margin: 0;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

    .search-results-info strong {
        color: var(--accent-primary);
    }

    /* Сетка фильмов */
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        padding-bottom: 50px;
    }

    /* Карточка фильма */
    .movie-card {
        background-color: var(--bg-card);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px var(--shadow-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
    }

    .movie-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px var(--shadow-color);
    }

    .movie-card-inactive {
        opacity: 0.85;
    }

    .movie-card-inactive:hover {
        transform: none;
        box-shadow: 0 5px 20px var(--shadow-color);
        cursor: default;
    }

    .card-link-content {
        text-decoration: none;
        color: inherit;
        display: block;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .poster-container {
        position: relative;
        width: 100%;
        height: 400px;
        overflow: hidden;
    }

    .movie-poster {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.5s ease;
    }

    .movie-card:hover .movie-poster {
        transform: scale(1.05);
    }

    .movie-card-inactive:hover .movie-poster {
        transform: none;
    }

    /* Бейдж возрастного ограничения */
    .age-restriction-badge-small {
        position: absolute;
        top: 15px;
        left: 15px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
        color: white;
        z-index: 10;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
        border: 2px solid white;
    }

    .age-0 { background-color: #4CAF50; }
    .age-6 { background-color: #2196F3; }
    .age-12 { background-color: #FF9800; }
    .age-16 { background-color: #F44336; }
    .age-18 { background-color: #000000; }

    /* Оверлей "Скоро" */
    .coming-soon-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.9));
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 5;
    }

    .coming-soon-overlay span {
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 10px 20px;
        border: 2px solid white;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.5);
    }

    /* Информация о фильме */
    .movie-info {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .movie-title {
        font-size: 1.3rem;
        margin: 0 0 10px 0;
        color: var(--text-primary);
        font-weight: bold;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 2.6em;
    }

    .movie-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        color: var(--text-secondary);
        font-size: 0.9rem;
        flex-wrap: wrap;
        gap: 10px;
    }

    .movie-genre {
        background-color: var(--bg-primary);
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .movie-duration {
        font-weight: 500;
    }

    .movie-rating {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 15px;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .rating-value {
        color: #f5c518;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .rating-max {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .no-rating {
        font-style: italic;
        color: var(--text-muted);
    }

    /* Бейджи статусов */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: auto;
        align-self: flex-start;
    }

    .status-active {
        background-color: rgba(40, 167, 69, 0.2);
        color: var(--success-color);
        border: 1px solid rgba(40, 167, 69, 0.3);
    }

    .status-inactive {
        background-color: rgba(255, 193, 7, 0.2);
        color: var(--warning-color);
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    /* Кнопка */
    .card-button-wrapper {
        padding: 0 20px 20px 20px;
        flex-shrink: 0;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        position: relative;
    }

    .btn-primary {
        background-color: var(--accent-primary);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--accent-hover);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(229, 9, 20, 0.3);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .btn-disabled {
        background-color: var(--border-color);
        color: var(--text-muted);
        cursor: not-allowed;
        opacity: 0.7;
    }

    .ticket-price {
        margin-left: auto;
        font-weight: bold;
        background-color: rgba(255, 255, 255, 0.2);
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .btn-secondary {
        background-color: var(--border-color);
        color: var(--text-primary);
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: var(--border-light);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    /* Состояние пустого списка */
    .empty-list {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 20px;
        color: var(--text-muted);
        background-color: var(--bg-card);
        border-radius: 15px;
        border: 2px dashed var(--border-color);
        margin: 20px 0;
    }

    .empty-list p {
        font-size: 1.2rem;
        margin: 10px 0 20px 0;
        color: var(--text-primary);
    }

    /* Адаптивность */
    @media (max-width: 1200px) {
        .movie-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 25px;
        }
    }

    @media (max-width: 992px) {
        .page-container {
            padding: 15px;
        }

        .page-title {
            font-size: 32px;
            margin-bottom: 30px;
        }

        .movie-grid {
            grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
            gap: 20px;
        }

        .poster-container {
            height: 350px;
        }
    }

    @media (max-width: 768px) {
        .movie-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .poster-container {
            height: 300px;
        }

        .movie-info {
            padding: 15px;
        }

        .movie-title {
            font-size: 1.2rem;
        }

        .card-button-wrapper {
            padding: 0 15px 15px 15px;
        }

        .btn {
            padding: 10px 15px;
            font-size: 0.95rem;
        }
    }

    @media (max-width: 576px) {
        .page-title {
            font-size: 28px;
        }

        .movie-grid {
            grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));
            gap: 15px;
        }

        .poster-container {
            height: 250px;
        }

        .movie-title {
            font-size: 1.1rem;
        }

        .movie-meta {
            flex-direction: column;
            gap: 5px;
        }

        .age-restriction-badge-small {
            width: 35px;
            height: 35px;
            font-size: 0.8rem;
            top: 10px;
            left: 10px;
        }

        .coming-soon-overlay span {
            font-size: 1.2rem;
            padding: 8px 15px;
        }
    }

    @media (max-width: 480px) {
        .page-title {
            font-size: 24px;
        }

        .movie-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .poster-container {
            height: 350px;
        }

        .movie-card {
            max-width: 350px;
            margin: 0 auto;
        }

        .empty-list {
            padding: 40px 15px;
        }

        .empty-list i {
            font-size: 48px;
        }

        .empty-list p {
            font-size: 1.1rem;
        }
    }
</style>