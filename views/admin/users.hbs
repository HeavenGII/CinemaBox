<!-- Предполагается использование Bootstrap 5 -->

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 text-primary">{{title}}</h1>

            <!-- ФОРМА ПОИСКА ПОЛЬЗОВАТЕЛЕЙ ПО NICKNAME -->
            <form action="/admin/users" method="GET" class="mb-4">
                <div class="input-group shadow-sm">
                    <input type="text"
                           class="form-control"
                           placeholder="Поиск пользователей по Nickname..."
                           name="searchNickname"
                           value="{{searchNickname}}"
                           aria-label="Поиск по Nickname"
                           minlength="2">

                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-search"></i> Найти
                    </button>
                    {{#if searchNickname}}
                        <a href="/admin/users" class="btn btn-outline-secondary" title="Сбросить поиск">
                            <i class="bi bi-x-lg"></i> Сброс
                        </a>
                    {{/if}}
                </div>
                {{#if searchNickname}}
                    <small class="form-text text-muted mt-1">
                        Поиск осуществляется по nickname пользователей. Минимум 2 символа.
                    </small>
                {{/if}}
            </form>
            <!-- КОНЕЦ ФОРМЫ ПОИСКА -->

            <!-- Сообщения об ошибке/успехе -->
            {{#if error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Ошибка:</strong> {{error}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            {{/if}}

            {{#if success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Успех:</strong> {{success}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            {{/if}}

            {{#if users.length}}
                {{#if searchNickname}}
                    <div class="alert alert-info shadow-sm" role="alert">
                        Результаты поиска по запросу: <strong>{{searchNickname}}</strong>
                        <span class="badge bg-primary ms-2">{{users.length}} пользователь(ей)</span>
                    </div>
                {{else}}
                    <div class="alert alert-light shadow-sm" role="alert">
                        Всего пользователей: <strong>{{users.length}}</strong>
                    </div>
                {{/if}}

                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <span>Список зарегистрированных пользователей (Роль: Пользователь)</span>
                        <span class="badge bg-primary rounded-pill">{{users.length}}</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0 align-middle">
                                <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-center">ID</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">
                                        <i class="bi bi-person-badge"></i> Nickname
                                        {{#if searchNickname}}
                                            <i class="bi bi-search text-primary ms-1" title="Поиск по этому полю"></i>
                                        {{/if}}
                                    </th>
                                    <th scope="col">Имя</th>
                                    <th scope="col">Фамилия</th>
                                    <th scope="col">Телефон</th>
                                    <th scope="col">Роль</th>
                                    <th scope="col" class="text-center">Действия</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each users}}
                                    <tr>
                                        <td class="text-center text-muted">{{userid}}</td>
                                        <td>{{email}}</td>
                                        <td>
                                            <strong>{{nickname}}</strong>
                                            {{#ifeq userid @root.user.userid}}
                                                <span class="badge bg-info ms-1">Вы</span>
                                            {{/ifeq}}
                                        </td>
                                        <td>{{firstname}}</td>
                                        <td>{{lastname}}</td>
                                        <td>{{phone}}</td>
                                        <td>
                                            <span class="badge bg-secondary">{{role}}</span>
                                        </td>
                                        <td class="text-center">
                                            {{#ifeq userid @root.user.userid}}
                                                <button type="button" class="btn btn-sm btn-outline-secondary" disabled
                                                        title="Вы не можете удалить свой собственный аккаунт">
                                                    <i class="bi bi-shield-lock"></i> Ваш аккаунт
                                                </button>
                                            {{else}}
                                                <!-- Форма удаления -->
                                                <form action="/admin/users/delete" method="POST"
                                                      onsubmit="return confirmDelete('{{nickname}}', '{{userid}}');"
                                                      class="d-inline">
                                                    <input type="hidden" name="userId" value="{{userid}}">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            title="Удалить пользователя">
                                                        <i class="bi bi-trash"></i> Удалить
                                                    </button>
                                                </form>
                                            {{/ifeq}}
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {{else}}
                {{#if searchNickname}}
                    <div class="alert alert-warning shadow-sm" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        Пользователь с nickname <strong>"{{searchNickname}}"</strong> не найден.
                    </div>
                {{else}}
                    <div class="alert alert-info shadow-sm" role="alert">
                        <i class="bi bi-info-circle"></i>
                        На данный момент в системе нет зарегистрированных обычных пользователей.
                    </div>
                {{/if}}
            {{/if}}

        </div>
    </div>
</div>

<!-- Подключение иконок Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<!-- JavaScript для подтверждения удаления -->
<script>
    function confirmDelete(nickname, userId) {
        return confirm(`ВНИМАНИЕ!\n\nВы действительно хотите удалить пользователя:\n\nNickname: ${nickname}\nID: ${userId}\n\nЭто действие нельзя отменить!`);
    }
</script>