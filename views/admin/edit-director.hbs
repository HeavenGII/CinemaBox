<div class="main-wrapper">
    <div class="page-container">
        <div class="header-actions">
            <h1 class="page-title">Редактировать профиль режиссера: {{director.name}}</h1>
            {{#if isEdit}}
                <a href="/director/{{director.directorid}}" class="btn btn-back">← Вернуться к режиссеру</a>
            {{/if}}
        </div>

        {{#if error}}
            <div class="alert alert-error">
                <p>{{error}}</p>
            </div>
        {{/if}}

        {{#if success}}
            <div class="alert alert-success">
                <p>{{success}}</p>
            </div>
        {{/if}}

        {{!-- Основная форма редактирования --}}
        <form action="/admin/edit-director/{{director.directorid}}" method="POST" class="edit-form" enctype="multipart/form-data">

            {{!-- Скрытое поле ID для идентификации режиссера --}}
            <input type="hidden" name="directorid" value="{{director.directorid}}">
            <input type="hidden" name="currentPhotourl" value="{{director.photourl}}">

            {{!-- Имя режиссера (НЕРЕДАКТИРУЕМО) --}}
            <div class="form-group">
                <label for="name">Имя режиссера</label>
                <input type="text" id="name" name="name" value="{{director.name}}" required readonly aria-readonly="true">
            </div>

            {{!-- Дата рождения --}}
            <div class="form-group">
                <label for="birthdate">Дата рождения</label>
                <input type="date" id="birthdate" name="birthdate" value="{{director.birthdate}}">
            </div>

            <div class="form-group">
                <label for="directorPhoto">Загрузить фото режиссера</label>
                <input type="file" id="directorPhoto" name="directorPhoto" accept="image/*">
                {{#if director.photourl}}
                    <small style="display: block; margin-top: 5px; opacity: 0.7;">Текущее фото: <a href="{{director.photourl}}" target="_blank">просмотреть</a>. Загрузка нового файла заменит его.</small>
                {{/if}}
            </div>

            {{!-- Биография (TEXT) --}}
            <div class="form-group">
                <label for="biography">Биография</label>
                <textarea id="biography" name="biography" rows="10">{{director.biography}}</textarea>
            </div>

            <div class="form-actions">
                <a href="/director/{{director.directorid}}" class="btn btn-cancel">Отмена</a>
                <button type="submit" class="btn btn-save">Сохранить изменения</button>
            </div>
        </form>

        <hr class="section-divider">

        {{!-- Форма удаления --}}
        <form action="/admin/delete-director/{{director.directorid}}" method="POST" class="delete-form" onsubmit="return confirm('Вы уверены, что хотите обнулить профиль режиссера {{director.name}}? Это действие необратимо!');">
            <button type="submit" class="btn btn-delete">Обнулить профиль</button>
        </form>
    </div>
</div>

