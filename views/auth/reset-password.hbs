<div class="auth-container">
    <h2>Установка нового пароля</h2>

    {{#if error}}
        <div class="alert alert-error">{{error}}</div>
    {{/if}}

    <form action="/auth/reset-password" method="POST" class="auth-form">
        <input type="hidden" name="token" value="{{token}}">

        <div class="form-group">
            <label for="newPassword">Новый пароль (минимум 6 символов)</label>
            <input type="password" id="newPassword" name="newPassword" required minlength="6">
        </div>

        <div class="form-group">
            <label for="confirmPassword">Подтвердите новый пароль</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6">
        </div>

        <button type="submit" class="btn btn-primary btn-full-width">Сбросить пароль</button>
    </form>
</div>